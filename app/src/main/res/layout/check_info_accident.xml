<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_1"
            android:background="#5882FA"
            >

            <Button
                android:layout_weight="1"
                android:id="@+id/btn_gas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주유 기록"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:background="#00ff0000"
                />

            <Button
                android:layout_weight="1"
                android:id="@+id/btn_repair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정비 기록"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:background="#00ff0000"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/btn_accident"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사고 기록"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:background="#00ff0000"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/car_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/car" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/accident_car" />

            <TextView
                android:id="@+id/gas_edt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/car_img"
                android:text="사고기록"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/address_edt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gas_edt"
                android:layout_toRightOf="@+id/car_img"
                android:text="서울 이촌1동"
                android:textSize="15dp" />

            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/accident_text"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/address_edt"
                android:layout_toRightOf="@+id/car_img"
                android:background="#DAD8D8"
                android:text="원인: 사고 장소 협소"
                android:paddingBottom="30dp"
                android:textSize="22dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="15dp"
                android:id="@+id/line4"
                android:layout_below="@id/accident_text"
                android:background="#A4A4A4" />

        </RelativeLayout>

    </LinearLayout>
