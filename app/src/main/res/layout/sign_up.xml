<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="회원가입"
        android:textSize="30dp"
        android:gravity="center"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_marginTop="30dp"
        android:text="이     름"
        android:layout_marginLeft="15dp"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="5"
        android:layout_toRightOf="@+id/name_text"
        android:layout_below="@+id/text1"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:hint="이름을 입력하세요."
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/border"
       />
    <TextView
        android:id="@+id/id_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginTop="50dp"
        android:text="I   D"
        android:layout_marginLeft="15dp"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/id_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="5"
        android:hint="아이디를 입력하세요."
        android:layout_toRightOf="@+id/name_text"
        android:layout_below="@+id/name"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/border"
        />

    <Button
        android:id="@+id/id_check"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_sign"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:text="id 중복확인"
        android:textSize="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#FFFF"
        android:background="@drawable/button_shape"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_check"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:text="비밀번호"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/password_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="5"
        android:hint="숫자 4자리를 입력하세요."
        android:inputType="textPassword"
        android:layout_toRightOf="@+id/name_text"
        android:layout_below="@+id/id_check"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/border2"
        />

    <TextView
        android:layout_width="96dp"
        android:layout_height="75dp"
        android:layout_below="@+id/password_sign"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:text="비밀번호 확인"
        android:textAlignment="center"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/password_sign_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="5"
        android:inputType="textPassword"
        android:hint="비밀번호를 한번 더 입력하세요."
        android:layout_toRightOf="@+id/name_text"
        android:layout_below="@+id/password_sign"
        android:layout_marginTop="60dp"
        android:textSize="17dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/border2"
        />

    <Button
        android:id="@+id/complete_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_sign_check"
        android:layout_marginTop="50dp"
       android:layout_centerInParent="true"
        android:background="@drawable/button_shape"
        android:text="회원 가입 완료"
        android:textColor="#FFFF"
        android:textSize="20dp" />

</RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>