<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Service_Record">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"

        >

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:background="#5882FA">

            <TextView
                android:id="@+id/accident"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="정비 기록"
                android:textSize="17dp"
                android:layout_centerHorizontal="true"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/text_date"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/accident"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                />
            <ImageButton
                android:id="@+id/select_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow"
                android:layout_centerHorizontal="true"
                android:background="#00ff0000"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/accident"/>
            <Button
                android:id="@+id/complete_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="완료"
                android:layout_marginTop="10dp"
                android:background="#00ff0000"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                android:textColor="#FFFFFF"
                android:textSize="17dp"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            >

            <ImageView
                android:id="@+id/service_mode_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:ems="1"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/service_mode_text"
                android:layout_toRightOf="@+id/service_mode_img"
                android:text="정비모드"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:layout_marginTop="25dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/service_mode_text"
                android:layout_marginLeft="36dp"
                android:text="정비소"
                android:textSize="15dp"
                android:layout_marginTop="16dp"
                android:id="@+id/center_Btn"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/center_Btn"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="3dp"
                android:text="자가정비"
                android:textSize="15dp"
                android:id="@+id/self_Btn"/>


            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/service_mode_img"
                android:background="#A4A4A4"
                />

            <ImageView
                android:id="@+id/service_update_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:ems="1"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/image"
                android:layout_below="@+id/line1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/service_update_text"
                android:layout_toRightOf="@+id/service_update_img"
                android:text="정비 사진 및 정비 영수증"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:layout_marginTop="7dp"
                android:layout_below="@+id/line1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/service_update_addText"
                android:layout_toRightOf="@+id/service_update_img"
                android:text="정비 사진과 정비 영수증을 추가해주세요."
                android:layout_marginLeft="22dp"
                android:textSize="15dp"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/service_update_text"
                />


            <ImageView
                android:id="@+id/image3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/service_update_img"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:background="#00ff0000"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/add_image" />

            <ImageView
                android:id="@+id/image2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:background="#00ff0000"
                android:layout_marginTop="40dp"
                android:layout_below="@+id/service_update_img"
                android:layout_marginLeft="0dp"
                android:layout_toRightOf="@+id/image1"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/add_image"/>


            <ImageView
                android:id="@+id/image1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:background="#00ff0000"
                android:layout_marginTop="40dp"
                android:layout_below="@+id/service_update_img"
                android:layout_marginLeft="10dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/add_image"/>



            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="135dp"
                android:layout_below="@+id/service_update_addText"
                android:background="#A4A4A4"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/service_number"
                android:text="1"
                android:layout_below="@id/line2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"/>

            <ImageView
                android:id="@+id/service_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:ems="1"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="35dp"
                android:src="@drawable/service"
                android:layout_toRightOf="@+id/service_number"
                android:layout_below="@+id/line2"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/general_tv"
                android:hint="일반수리"
                android:ems="20"
                android:layout_below="@+id/line2"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/service_img"
                android:textSize="13dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="지출금액"
                android:ems="17"
                android:layout_below="@+id/general_tv"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/service_img"
                android:textSize="13dp"
                android:id="@+id/amount_tv"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/general_tv"
                android:layout_toRightOf="@+id/service_number"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="330dp"
                android:text="￦"/>

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="메모, 특이사항 (250자 이내, 이모티콘 불가)
"
                android:ems="10"
                android:layout_toRightOf="@+id/service_number"
                android:layout_marginLeft="70dp"
                android:layout_below="@+id/amount_tv"
                android:layout_marginTop="10dp"
                />


        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>