<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_1"
        android:background="#5882FA"
        >

        <Button
            android:layout_weight="1"
            android:id="@+id/btn_gas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주유 기록"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:background="#00ff0000"
            />

        <Button
            android:layout_weight="1"
            android:id="@+id/btn_repair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정비 기록"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:background="#00ff0000"/>
        <Button
            android:layout_weight="1"
            android:id="@+id/btn_accident"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사고 기록"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:background="#00ff0000"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/gas_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/gas" />

                <TextView
                    android:id="@+id/gas_edt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주유"
                    android:textSize="25dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/gasAmount_edt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30L"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/center_edt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="예진주유소"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/gas_cost1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="33dp"
                    android:layout_marginRight="50dp"
                    android:text="3000"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/gas_img1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/gas" />

                <TextView
                    android:id="@+id/gas_edt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주유"
                    android:textSize="25dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/gasAmount_edt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="26.9L"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/center_edt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아영주유소"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/gas_cost2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="33dp"
                    android:layout_marginRight="50dp"
                    android:text="3000"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/gas_img3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/gas" />

                <TextView
                    android:id="@+id/gas_edt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주유"
                    android:textSize="25dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/gasAmount_edt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="40L"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/center_edt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="한석주유소"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/gas_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="33dp"
                    android:layout_marginRight="50dp"
                    android:text="3000"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>



</LinearLayout>